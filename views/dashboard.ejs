<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="UTF-8">
        <meta name="viewport",content="width=device-width,initial-scale=1.0">
        <link rel="stylesheet" href="/css/styles.css">
        <title>Checklist Dashboard</title>
        <style>
            body{font-family: Arial, Helvetica, sans-serif; margin: 20px;}
            table{width: 100%;border-collapse: collapse;}
            th,td{border: 1px solid #ddd; padding: 8px;}
            th{background-color: #f9f9f9;}
            tr{text-align: center;}
            h2{text-align: center;}
            .passed{color: green;}
            .failed{color: red;}
            .username-update-container{
                display: flex;
                flex-direction: column;
            }
            .buttons-container{display: flex;}
            .button{margin-left: 10px;}
            .list-item {display: flex;}
            .application-number-update-delete-button-containers{display: flex; justify-content: space-between; align-items: center;}
        </style>
    </head>
    <body>
        <h2>Checklist Dashboard</h2>
        <div class="username-update-container">
        <% results.forEach(result => { %>
        <div class="application-number-update-delete-button-containers">
        <h4>Application Number: <%= result.user.applicationNumber %></h4>
         <div class="buttons-container">
            <button type="button" class="button">
                <a href="/update-user/<%= result.user._id %>">Update</a>
            </button>
            <form action="/delete-user/<%= result.user._id %>" method="POST">
                <button type="submit" class="button">Delete</button>
            </form>
            </div>
        </div>
        <table>
            <thead>
                <tr>
                    <th>Rule</th>
                    <th>Status</th>
                </tr>
            </thead>
            <tbody>
                   <% result.checks.forEach(check => { %>
                        <tr>
                            <td><%= check.rule %></td>
                            <td class="<%= check.status ? 'passed':'failed' %>">
                                <%= check.status ? 'Passed':"Failed" %>
                            </td>
                        </tr>    
                     <% }); %>
                   <% }); %>
                 </div>
                </div>
            </tbody>
        </table>
    </body>
</html>

