<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width,initial-scale=1.0">
        <link rel="stylesheet" href="/css/styles.css">
        <title>Update User</title>
    </head>
    <body>
        <div class="add-user-main-container">
        <h1 class="update-user-title">Update User</h1>
        <% results.forEach(result => { %>
                <form action="/user-update/<%= result.user._id %>" method="POST" class="form-container">
                    <label>Fee Paid :</label>
                    <input type="text" name="isValuationFeePaid" value="<%= result.user.isValuationFeePaid %>" required />
                    <br>
                    <label>UK Resident :</label>
                    <input type="text" name="isUkResident" value="<%= result.user.isUkResident %>" required />
                    <br>
                    <label>Risk Rating :</label>
                    <input type="text" name="riskRating" value="<%= result.user.riskRating %>" required />
                    <br>
                    <label>Loan Required :</label>
                    <input type="text" name="loanRequired" value="<%= result.user.mortgage.loanRequired %>" required />
                    <br>
                    <label>Property Value :</label>
                    <input type="text" name="purchasePrice" value= "<%= result.user.mortgage.purchasePrice %>" required />
                    <br>
                    <div class="button-container">
                        <button type="submit" class="add-button-container">Update</button>
                    </div>
                </form>
       <% }); %>
        </div>
    </body>
</html>